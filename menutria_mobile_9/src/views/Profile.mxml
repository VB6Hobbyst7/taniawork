			public function showThings(u:uint):void {
				selectedThing = u;
				if (u == 1){
					rateList.dataProvider = new ArrayCollection();
					rateList.visible = true;
					placesList.visible = false;
					thing1.alpha = 0.5;
					thing2.alpha = 1;
					thing3.alpha = 1;
